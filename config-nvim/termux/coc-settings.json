{
  "snippets.ultisnips.enable": false,
  "snippets.userSnippetsDirectory": "~/.config/nvim/snippets",
  "coc.preferences.jumpCommand": "tab drop",
  "diagnostic.enable": true,
  "diagnostic.displayByAle": false,
  "diagnostic.refreshOnInsertMode": true,
  "diagnostic.checkCurrentLine": true,
  "diagnostic.virtualText": true,
  "diagnostic.virtualTextPrefix": "(e) ",
  "languageserver": {
    "fortls": {
      "command": "/data/data/com.termux/files/usr/bin/fortls",
      "args": [
        "--notify_init",
        "--hover_signature",
        "--use_signature_help"
      ],
      "filetypes": ["fortran", "f77", "f90", "f95", "f03", "f08", "f13", "f18"],
      "rootPatterns": [".fortls", ".git", ".fpm", "fpm.toml"]
    },
    "diagnostic-languageserver": {
      "command": "diagnostic-languageserver",
      "args": ["--stdio"],
      "filetypes": ["fortran", "for", "f90", "f95", "f03", "f08", "f18"],
      "initializationOptions": {
        "linters": {
          "gfortran": {
            "command": "gfortran",
            "args": ["-S", "-fsyntax-only", "-Wall", "%file"],
            "sourceName": "gfortran",
            "isStderr": true,
            "formatLines": 3,
            "formatPattern": [
              "^([^:]+):(\\d+):(\\d+):",
              { "file": 1, "line": 2, "column": 3 }
            ]
          }
        },
        "filetypes": {
          "fortran": "gfortran",
          "for": "gfortran",
          "f77": "gfortran",
          "f90": "gfortran",
          "f95": "gfortran",
          "f03": "gfortran",
          "f08": "gfortran",
          "f18": "gfortran"
        }
      }
    }
  },
  "snippets.ultisnips.pythonPrompt": false
}
